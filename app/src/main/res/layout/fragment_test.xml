<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/ttlSelectStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Please select your name:"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/studentTestListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ttlSelectStudent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtNoStudentTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are no student yet!"
        android:layout_centerInParent="true" />

</RelativeLayout>